<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form id="login-form" action="/login" method="POST" role="form">
      <legend>Login</legend>
    
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Input Email" autofocus required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="text" class="form-control" id="password" name="password" placeholder="Input Password" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="text-center alt-color-01bg">
      <a href='/signup' class=""><div class="btn-padding-lg">Don't have an account? Sign up here</div></a>
    </div>
  </div>
</div>